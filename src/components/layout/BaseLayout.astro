---
import { ClientRouter } from 'astro:transitions';
import ThemeScript from '../ui/ThemeScript.astro';
import SEO from '../seo/SEO.astro';
import StructuredData from '../seo/StructuredData.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';
import { SITE } from '../../config/site';
import { generateSEOProps, getCanonicalURL } from '../../utils/seo';
import '../../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  type?: 'website' | 'article' | 'profile';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
}

const {
  title = SITE.title,
  description = SITE.description,
  image,
  canonicalURL,
  type = 'website',
  publishedTime,
  modifiedTime,
  author,
  tags,
} = Astro.props;

// Generate SEO props with defaults
const seoProps = generateSEOProps({
  title,
  description,
  image,
  canonicalURL: canonicalURL || getCanonicalURL(Astro.url.pathname),
  type,
  publishedTime,
  modifiedTime,
  author,
  tags,
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Component -->
    <SEO {...seoProps} />

    <!-- Structured Data (JSON-LD) -->
    <StructuredData
      type={type === 'article' ? 'article' : 'website'}
      url={seoProps.canonicalURL}
      name={seoProps.title}
      description={seoProps.description}
      headline={type === 'article' ? seoProps.title : undefined}
      image={seoProps.image}
      datePublished={publishedTime}
      dateModified={modifiedTime}
      author={seoProps.author}
      tags={tags}
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title={SITE.title} href="/rss.xml" />

    <!-- Theme Script (prevents FOUC) -->
    <ThemeScript />

    <!-- Client Router (Astro v5 View Transitions) -->
    <ClientRouter />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
